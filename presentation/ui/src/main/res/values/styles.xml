<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TextStyle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/color_text_primary</item>
        <item name="android:fontFamily">@font/worksans_regular</item>
    </style>

    <style name="TextStyle.ToolBar" parent="TextStyle">
        <item name="android:fontFamily">@font/worksans_semibold</item>
        <item name="android:textSize">@dimen/text_size_headline</item>
        <item name="android:textColor">@color/color_text_primary</item>
    </style>

    <style name="TextStyle.Title" parent="TextStyle">
        <item name="android:fontFamily">@font/worksans_semibold</item>
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="TextStyle.Heading" parent="TextStyle">
        <item name="android:fontFamily">@font/worksans_semibold</item>
        <item name="android:textSize">@dimen/text_size_heading</item>
    </style>

    <style name="TextStyle.Headline" parent="TextStyle">
        <item name="android:fontFamily">@font/worksans_semibold</item>
        <item name="android:textSize">@dimen/text_size_headline</item>
    </style>

    <style name="TextStyle.Huge" parent="TextStyle">
        <item name="android:fontFamily">@font/worksans_semibold</item>
        <item name="android:textSize">@dimen/text_size_huge</item>
    </style>

    <style name="TextStyle.body" parent="TextStyle">
        <item name="android:fontFamily">@font/worksans_regular</item>
        <item name="android:textSize">@dimen/text_size_body</item>
    </style>

    <style name="TextStyle.caption" parent="TextStyle">
        <item name="android:fontFamily">@font/worksans_regular</item>
        <item name="android:textSize">@dimen/text_size_caption</item>
    </style>

    <style name="TextStyle.small" parent="TextStyle">
        <item name="android:fontFamily">@font/worksans_regular</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>
    <style name="apply_job_button_Style" parent="Widget.Material3.Button">
        <item name="background">@drawable/background_apply_job</item>
        <item name="backgroundTint">@color/button_apply_color</item>
        <item name="android:paddingVertical" tools:targetApi="o">@dimen/spacing_medium</item>
        <item name="fontFamily">@font/worksans_semibold</item>
        <item name="textAllCaps">false</item>
        <item name="android:text">"Apply now"</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:layout_marginVertical" tools:targetApi="o">@dimen/spacing_medium</item>
    </style>
    <style name="card_view_details_chip_style" >
        <item name="background">@drawable/card_details_chip_background</item>
        <item name="backgroundTint">@color/white</item>
        <item name="cardCornerRadius">@dimen/spacing_normal</item>
        <item name="android:layout_width">@dimen/card_details_chip_width</item>
        <item name="android:layout_height">@dimen/card_details_chip_height</item>

   </style>
  
    <style name="button_cancel_send_cv_style" >
        <item name="background">@drawable/dialog_custom_button_cancel</item>
        <item name="backgroundTint">@color/button_cancel</item>
        <item name="fontFamily">@font/worksans_semibold</item>
        <item name="textAllCaps">false</item>
        <item name="android:text">"Cancel"</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginVertical" tools:targetApi="o">@dimen/spacing_medium</item>
    </style>
  
    <style name="button_send_cv_style" >
        <item name="background">@drawable/dialog_custom_button_send</item>
        <item name="backgroundTint">@color/button_apply_color</item>
        <item name="fontFamily">@font/worksans_semibold</item>
        <item name="textAllCaps">false</item>
        <item name="android:text">"send"</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginVertical" tools:targetApi="o">@dimen/spacing_medium</item>
    </style>

    <style name="WelcomeTextStyle" parent="TextStyle.Huge">
        <item name="android:textColor">@color/color_text_primary</item>
        <item name="android:shadowColor">@color/color_text_tertiary</item>
<!--        <item name="android:text">@string/login_welcome_text</item>-->
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:layout_marginStart">@dimen/spacing_medium</item>
        <item name="android:layout_marginTop">@dimen/login_welcome_text_margin_top</item>
    </style>

    <style name="LoginToJoin" parent="TextStyle.body">
        <item name="android:textColor">@color/color_text_primary</item>
        <item name="android:layout_marginTop">@dimen/spacing_normal</item>
        <item name="android:layout_marginStart">@dimen/spacing_medium</item>
<!--        <item name="android:text">@string/login_to_jo</item>-->
    </style>

    <style name="EditTextCreateJobStyle">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:inputType">text</item>
        <item name="android:textColorHint">@color/color_text_tertiary</item>
        <item name="android:autofillHints">""</item>
        <item name="android:paddingHorizontal">@dimen/spacing_medium</item>
        <item name="android:fontFamily">@font/worksans_semibold</item>
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="ChipStyle">
        <item name="chipBackgroundColor">@color/chip_color</item>
        <item name="chipCornerRadius">@dimen/radius</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="fontFamily">@font/worksans_regular</item>
        <item name="android:textColor">@color/color_text_secondary</item>
        <item name="chipStartPadding">@dimen/spacing_medium</item>
        <item name="chipEndPadding">@dimen/spacing_medium</item>
    </style>

    <style name="CustomEditTextStyle" parent="android:Widget.EditText">
        <item name="android:background">@drawable/card_background</item>
        <item name="android:drawablePadding">@dimen/spacing_medium</item>
        <item name="android:drawableTint">@color/color_text_tertiary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/color_text_primary</item>
        <item name="android:textColorHint">@color/color_text_tertiary</item>
        <item name="android:textSize">@dimen/text_size_body</item>
    </style>

    <style name="SharedButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:layout_marginBottom">@dimen/spacing_medium</item>
        <item name="android:fontFamily">@font/worksans_regular</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_text_primary</item>
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="normalButtonStyle" parent="">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/worksans_semibold</item>
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>


    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="searchBarStyle" parent="TextStyle.caption">
        <item name="android:background">@drawable/background_search_bar</item>
        <item name="android:ellipsize">end</item>
        <item name="android:hint">@string/search</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:lines">1</item>
        <item name="android:paddingStart">@dimen/spacing_xxlarge</item>
        <item name="android:paddingEnd">@dimen/spacing_xxlarge</item>
        <item name="android:textColor">@color/color_text_primary</item>
        <item name="android:textColorHint">@color/tertiary</item>
        <item name="android:layout_marginStart">@dimen/spacing_medium</item>
        <item name="android:layout_marginEnd">@dimen/spacing_medium</item>
    </style>

    <style name="personalImageStyle">
        <item name="android:padding">@dimen/person_image_border_width</item>
        <item name="android:layout_marginEnd">@dimen/spacing_medium</item>
        <item name="android:layout_marginStart">@dimen/spacing_medium</item>
        <item name="shapeAppearanceOverlay">@style/circleImageView</item>
        <item name="strokeWidth">@dimen/person_image_border_width</item>
        <item name="strokeColor">@color/light_border</item>
    </style>

    <style name="personalLargeImageStyle" parent="personalImageStyle">
        <item name="strokeColor">@color/tertiary</item>
    </style>

    <style name="TextInputLayoutStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/spacing_normal</item>
        <item name="boxCornerRadiusBottomStart">@dimen/spacing_normal</item>
        <item name="boxCornerRadiusTopEnd">@dimen/spacing_normal</item>
        <item name="boxCornerRadiusTopStart">@dimen/spacing_normal</item>
        <item name="boxBackgroundColor">@color/cards</item>
        <item name="boxStrokeWidth">@dimen/zero</item>
        <item name="boxStrokeWidthFocused">@dimen/zero</item>
    </style>

    <style name="loginButtonStyle" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/background_button_login</item>
        <item name="fontFamily">@font/worksans_semibold</item>
        <item name="textAllCaps">false</item>
        <item name="android:text">"Login"</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_body</item>
    </style>

    <style name="PasswordTextInputLayoutStyle" parent="TextInputLayoutStyle">
        <item name="endIconMode">password_toggle</item>
        <item name="endIconDrawable">@drawable/ic_password_toggle</item>
    </style>

    <style name="chipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="chipCornerRadius">@dimen/radius</item>
        <item name="android:textColor">@drawable/chip_text_color</item>
        <item name="android:fontFamily">@font/worksans_regular</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="chipStartPadding">@dimen/spacing_medium</item>
        <item name="chipEndPadding">@dimen/spacing_medium</item>
        <item name="chipBackgroundColor">@drawable/chip_background</item>
    </style>

    <style name="cancelableChip" parent="chipStyle">
        <item name="android:drawableEnd">@drawable/ic_close</item>
        <item name="android:drawablePadding">@dimen/spacing_small</item>
        <item name="android:textColor">@color/color_text_secondary</item>
        <item name="chipBackgroundColor">@color/blue_300</item>
    </style>

    <style name="addChipStyle" parent="chipStyle">
        <item name="android:drawableEnd">@drawable/ic_add</item>
        <item name="android:drawablePadding">@dimen/spacing_small</item>
        <item name="android:textColor">@color/blue_500</item>
        <item name="chipBackgroundColor">@color/background</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipStrokeColor">@color/blue_500</item>
        <item name="drawableTint">@color/blue_500</item>
    </style>

</resources>