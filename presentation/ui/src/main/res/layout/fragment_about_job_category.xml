<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.cupcake.viewmodels.job_details.JobViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.cupcake.ui.jobs.AboutJobCategory">

        <com.cupcake.jobsfinder.ui.jobs.DetailsChipCustomView
            android:id="@+id/layout_details_chip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:createdAt="@{String.valueOf(viewModel.jobsUIState.job.createdAt)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:location="@{viewModel.jobsUIState.job.location}"
            app:salary="@{viewModel.jobsUIState.job.salary}"
            app:workType="@{viewModel.jobsUIState.job.workType}" />

        <com.cupcake.jobsfinder.ui.jobs.ExpandCardCustomView
            android:id="@+id/card_view_expandable_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/spacing_medium"
            app:cardDescription="@{viewModel.jobsUIState.job.jobDescription}"
            app:layout_constraintEnd_toEndOf="@+id/layout_details_chip"
            app:layout_constraintStart_toStartOf="@+id/layout_details_chip"
            app:layout_constraintTop_toBottomOf="@id/layout_details_chip" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>