<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.cupcake.viewmodels.edit_profile.EditProfileDetailsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".edit_profile.EditProfileDetailsFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/ic_back" />

        <TextView
            android:id="@+id/textViewProfileDetails"
            style="@style/TextStyle.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_medium"
            android:layout_marginTop="@dimen/spacing_xxlarge"
            android:text="@string/profile_details"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tool_bar" />

        <TextView
            android:id="@+id/textViewFirstName"
            style="@style/TextStyle.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xlarge"
            android:text="@string/full_name"
            app:layout_constraintStart_toStartOf="@id/textInputLayoutFullName"
            app:layout_constraintTop_toBottomOf="@id/textViewProfileDetails" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutFullName"
            style="@style/TextInputLayoutStyle"
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_medium"
            android:layout_marginTop="@dimen/spacing_normal"
            android:inputType="text"
            android:textColorHint="@color/color_text_tertiary"
            app:boxStrokeWidth="@dimen/zero"
            app:boxStrokeWidthFocused="@dimen/zero"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewFirstName">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="@dimen/spacing_normal"
                android:fontFamily="@font/worksans_regular"
                android:inputType="text"
                android:textSize="@dimen/text_size_body" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textViewJobTitle"
            style="@style/TextStyle.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:text="@string/job_title"
            app:layout_constraintStart_toStartOf="@id/textInputLayoutJobTitle"
            app:layout_constraintTop_toBottomOf="@id/textInputLayoutFullName" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutJobTitle"
            style="@style/TextInputLayoutStyle"
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_medium"
            android:layout_marginTop="@dimen/spacing_normal"
            android:autofillHints="username"
            android:inputType="text"
            app:boxStrokeWidth="@dimen/zero"
            app:boxStrokeWidthFocused="@dimen/zero"
            app:endIconMode="clear_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewJobTitle">

            <AutoCompleteTextView
                style="@style/TextStyle.body"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text_background"
                android:completionThreshold="1"
                android:focusable="true"
                android:inputType="text"
                android:labelFor="@id/textInputLayoutJobTitle"
                android:maxLines="1"
                android:padding="@dimen/spacing_medium"
                android:textColor="@color/color_text_primary"
                tools:ignore="LabelFor" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textViewLocation"
            style="@style/TextStyle.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:text="@string/location"
            app:layout_constraintStart_toStartOf="@id/textInputLayoutLocation"
            app:layout_constraintTop_toBottomOf="@id/textInputLayoutJobTitle" />


        <TextView
            android:id="@+id/textInputLayoutLocation"
            android:layout_width="@dimen/zero"
            android:layout_height="@dimen/spacing_huge"
            android:layout_marginHorizontal="@dimen/spacing_medium"
            android:layout_marginTop="@dimen/spacing_normal"
            android:autofillHints="username"
            android:background="@drawable/card_background"
            android:onClick="@{() -> viewModel.onEditLocationClick()}"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="@dimen/spacing_medium"
            android:drawableTint="@color/color_text_tertiary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewLocation"
            app:drawableEndCompat="@drawable/ic_pen" />

        <TextView
            android:id="@+id/textViewWebsite"
            style="@style/TextStyle.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:text="@string/website"
            app:layout_constraintStart_toStartOf="@id/textInputLayoutWebsite"
            app:layout_constraintTop_toBottomOf="@id/textInputLayoutLocation" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutWebsite"
            style="@style/TextInputLayoutStyle"
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_medium"
            android:layout_marginTop="@dimen/spacing_normal"
            android:inputType="text"
            android:textColorHint="@color/color_text_tertiary"
            app:boxStrokeWidth="@dimen/zero"
            app:boxStrokeWidthFocused="@dimen/zero"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewWebsite">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="@dimen/spacing_normal"
                android:fontFamily="@font/worksans_regular"
                android:inputType="text"
                android:textSize="@dimen/text_size_body" />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonSave"
            style="@style/normalButtonStyle"
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_medium"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/blue_500"
            android:enabled="@{!viewModel.state.isLoading}"
            android:textAllCaps="false"
            app:buttonText="@{@string/save}"
            app:isLoading="@{viewModel.state.isLoading}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/spacing_normal"
            android:indeterminateTint="@color/blue_300"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/buttonSave"
            app:layout_constraintEnd_toEndOf="@id/buttonSave"
            app:layout_constraintStart_toStartOf="@id/buttonSave"
            app:layout_constraintTop_toTopOf="@id/buttonSave"
            app:showWhenIf="@{viewModel.state.isLoading}" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>