<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.cupcake.viewmodels.edit_profile.bottomsheet.EditLocationBottomSheetViewModel" />
    </data>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bottom_sheet_background">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_sheets_radius"
            android:backgroundTint="@color/background"
            android:paddingHorizontal="@dimen/spacing_medium"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            tools:context=".edit_profile.EditLocationBottomSheetFragment">

            <com.google.android.material.bottomsheet.BottomSheetDragHandleView
                android:id="@+id/drag_handle"
                android:layout_width="@dimen/bottom_sheet_drag_handle_view_width"
                android:layout_height="@dimen/bottom_sheet_drag_handle_view_height"
                android:layout_marginVertical="@dimen/spacing_medium"
                android:layout_marginTop="@dimen/spacing_medium"
                android:background="@color/color_text_tertiary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editTextSearchInput"
                android:layout_width="match_parent"
                android:layout_height="@dimen/search_bar_height"
                android:layout_marginTop="@dimen/spacing_large"
                android:background="@drawable/card_background"
                android:drawableStart="@drawable/ic_search"
                android:drawablePadding="@dimen/spacing_normal"
                android:hint="job location"
                android:paddingHorizontal="@dimen/spacing_medium"
                android:textAppearance="@style/TextStyle.body"
                android:textColorHint="@color/color_text_tertiary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/drag_handle" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/spacing_medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/editTextSearchInput" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>